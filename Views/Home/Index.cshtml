@model IEnumerable<Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";  /* Uncomment to use the layout */
    <title>Employee List</title>
}

<style>
    .image-row img {
        width: 100px;
        margin-right: 10px;
    }
</style>

<body>
    <div>
        @foreach (var employee in Model)
        {
            var photoPath = "~/Images/" + (employee.PhotoPath ?? "human.jpg");
            <div class="card m-3">
                <div class="card-body">
                    <h3>@employee.Name</h3>
                    <div class="image-row d-flex flex-wrap">
                        <img class="img-fluid rounded ImageTumbnail" src="@photoPath" alt="Photo of @employee.Name" asp-append-version="true" />
                    </div>
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.id" class="btn btn-primary">View</a>
                    <a asp-action="Edit" asp-controller="Home" asp-route-id="@employee.id" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                </div>
            </div>
        }

    </div>
</body>
